mixin productCard(product = {})
  .card
    .cardWrapper
      .cardImageWrapper
        img(src=`${product.imageUrls.sm}`)
      .textAndPriceWrapper
        .cardText
          p #{product.brand} #{product.description}
        .cardPrice
          p $#{product.networkPrice.replace(/(\.\d+)/g,".00")}
        a(href=`/page/${page}?id=${product.pricing.productId}`)
          button(type="button") VIEW MORE